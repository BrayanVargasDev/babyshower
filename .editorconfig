root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,astro,json,css,md}]
indent_style = space
indent_size = 2

[*.astro]
indent_style = space
indent_size = 2
max_line_length = 80

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[*.json]
indent_size = 2